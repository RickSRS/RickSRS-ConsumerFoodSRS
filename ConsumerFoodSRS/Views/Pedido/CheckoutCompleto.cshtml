@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Pedido Nº: <b>@Model.PedidoId</b></p>
            <hr />
            <p>Cliente: <b>@Model.Nome</b></p>
            <p>Data do Pedido: <b>@Model.PedidoEnviado</b></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>

                @foreach (var item in Model.PedidoItens)
                {
                    <tr>
                        <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                        <td>@item.Quantidade</td>
                        <td>@item.Lanche.Nome</td>
                        <td>@item.Lanche.Preco</td>
                    </tr>
                }
            </table>
            <h4>Valor total do pedido: <b>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</b></h4>
        </div>
    </div>
</div>
<div class="form-group text-center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>