@model Lanche

<div class="card">
    <h3 class="card-header">
        @Model.Nome
    </h3>
    <div class="text-center">
        <img src="@Model.ImagemUrl" class="img-fluid" alt="@Model.Nome">
    </div>
    <div class="card-body">
        <h5 class="card-title">Descrição do @Model.Nome</h5>
        <p class="card-text">@Model.DescricaoDetalhada</p>
    </div>
    <div class="card-footer bg-transparent">
        <a asp-controller="Lanche" asp-action="List" class="btn btn-secondary">Ver Cardápio</a>
        <a asp-controller="CarrinhoCompra" asp-action="AdicionarCarrinhoCompra" asp-route-lancheId="@Model.LancheId" class="btn btn-success">Adicionar <b>@Model.Nome</b> ao Carrinho</a>
    </div>
</div>