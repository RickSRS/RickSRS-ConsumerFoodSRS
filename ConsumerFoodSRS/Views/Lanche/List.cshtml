@model IEnumerable<ConsumerFoodSRS.Models.Lanche>

<h1>@ViewData["Titulo"]</h1>
<hr />
<div class="ms-4 container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="m-1 col-12 col-sm-6 col-md-6 col-lg-5 card" style="width: 18rem;">
                <div class="container">
                    <img src="@(item.ImagemUrl)" class="card-img-top">
                </div>
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 card-body">
                    <h5 class="card-title">@(item.Nome)</h5>
                    <p class="card-text">@(item.DescricaoCurta)</p>
                </div>
                <ul class="col-12 col-sm-12 col-md-12 col-lg-12 list-group list-group-flush">
                    <li class="list-group-item">R$ @(item.Preco) </li>
                </ul>
                <button type="button" class="m-1 btn btn-success">Adicionar ao Carrinho</button>
            </div>
        }
    </div>
</div>