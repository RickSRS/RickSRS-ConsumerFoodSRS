@model LancheListViewModel

<div class="card">
    <h3 class="card-header">
        Cardápio de Lanches - @Model.CategoriaAtual
    </h3>
    <div class="card-body">
        <div class="container">
            <div class="row">
                @foreach (var lanche in Model.Lanches)
                {
                    <div class="m-1 col-12 col-sm-6 col-md-6 col-lg-5 card" style="width: 19rem;">
                        <div class="container">
                            <img src="@(lanche.ImagemUrl)" class="card-img-top">
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12 card-body">
                            <h5 class="card-title">@(lanche.Nome)</h5>
                            <p class="card-text">@(lanche.DescricaoCurta)</p>
                        </div>
                        <div class=" col-12 col-sm-12 col-md-12 col-lg-12 list-group list-group-flush">
                            <h5 class="list-group-item">@(lanche.Preco.ToString("c")) </h5>
                        </div>
                        <a href="#" class="m-1 btn btn-success">Adicionar ao Carrinho</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
