@model ReflectionIT.Mvc.Paging.PagingList<ConsumerFoodSRS.Models.Lanche>

@{
    ViewData["Title"] = "Index";
}

<h1>Produtos</h1>
<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="Pesquise seu produto" value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Pesquisar
    </button>
</form>

<p>
    <a asp-action="Create">Novo Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LancheId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.LancheId">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>